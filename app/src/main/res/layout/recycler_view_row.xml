<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/recycler_row"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/start_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Descrizione dell'icona"
                android:src="@drawable/baseline_room_24"
                app:layout_constraintBottom_toTopOf="@+id/stop_icon"
                app:layout_constraintEnd_toStartOf="@+id/ride_start_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ride_start_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="middle"
                android:gravity="end"
                android:maxLines="1"
                android:text="Partenza"
                app:layout_constraintBottom_toBottomOf="@+id/start_icon"
                app:layout_constraintStart_toEndOf="@+id/start_icon"
                app:layout_constraintTop_toTopOf="@+id/start_icon" />

            <ImageView
                android:id="@+id/stop_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Descrizione dell'icona"
                android:src="@drawable/baseline_school_24"
                app:layout_constraintBottom_toTopOf="@+id/car_icon"
                app:layout_constraintEnd_toStartOf="@+id/ride_stop_txt"
                app:layout_constraintStart_toStartOf="@+id/start_icon"
                app:layout_constraintTop_toBottomOf="@+id/start_icon" />

            <TextView
                android:id="@+id/ride_stop_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="middle"
                android:gravity="end"
                android:maxLines="1"
                android:text="Destinazione"
                app:layout_constraintBottom_toBottomOf="@+id/stop_icon"
                app:layout_constraintStart_toEndOf="@+id/stop_icon"
                app:layout_constraintTop_toTopOf="@+id/stop_icon"
                app:layout_constraintVertical_bias="0.6" />

            <ImageView
                android:id="@+id/car_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Descrizione dell'icona"
                android:src="@drawable/baseline_directions_car_24"
                app:layout_constraintBottom_toTopOf="@+id/date_icon"
                app:layout_constraintEnd_toStartOf="@+id/ride_car_txt"
                app:layout_constraintStart_toStartOf="@+id/stop_icon"
                app:layout_constraintTop_toBottomOf="@+id/stop_icon" />

            <TextView
                android:id="@+id/ride_car_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Automobile"
                app:layout_constraintBottom_toBottomOf="@+id/car_icon"
                app:layout_constraintStart_toEndOf="@+id/car_icon"
                app:layout_constraintTop_toTopOf="@+id/car_icon" />

            <ImageView
                android:id="@+id/date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Descrizione dell'icona"
                android:src="@drawable/baseline_calendar_month_24"
                app:layout_constraintStart_toStartOf="@+id/car_icon"
                app:layout_constraintTop_toTopOf="@+id/time_icon" />

            <TextView
                android:id="@+id/ride_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Data"
                app:layout_constraintBottom_toBottomOf="@+id/date_icon"
                app:layout_constraintStart_toEndOf="@+id/date_icon"
                app:layout_constraintTop_toTopOf="@+id/date_icon" />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/baseline_access_time_24"
                app:layout_constraintBottom_toBottomOf="@+id/date_icon"
                app:layout_constraintStart_toEndOf="@+id/ride_date_txt"
                app:layout_constraintTop_toTopOf="@+id/date_icon"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/ride_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Ora"
                app:layout_constraintBottom_toBottomOf="@+id/time_icon"
                app:layout_constraintStart_toEndOf="@+id/time_icon"
                app:layout_constraintTop_toTopOf="@+id/time_icon" />

            <ImageView
                    android:id="@+id/confirm_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/baseline_check_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/delete_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_icon" />

            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_delete_24"
                app:layout_constraintBottom_toBottomOf="@+id/confirm_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/confirm_btn"
                app:layout_constraintTop_toTopOf="@+id/confirm_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>